def keyword_cipher(keyword, text):
    keyword = "".join(dict.fromkeys(keyword.upper()))
    alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
    seq = keyword + "".join([c for c in alphabet if c not in keyword])

    plain = alphabet
    cipher = seq

    res = ""
    for ch in text.upper():
        if ch.isalpha():
            res += cipher[plain.index(ch)]
        else:
            res += ch
    return res

print(keyword_cipher("CIPHER", "HELLO"))
